<div class= "d-flex justify-content-lg-center d-inline-block mt-5 p-3 bg-white border container w-25 ">
    
    <%= form_with model: @user do |f|%>
        <p><h4 class="text-center">Register</h4></p>
        <p><%= f.label :email%>
        <%= f.email_field :email, placeholder: "Email", class: 'form-control form-control ' %></p>

        <p><%= f.label :name%>
        <%= f.text_field :name, placeholder: "Name", class: 'form-control form-control' %></p>

        <p><%= f.label :password%>
        <%= f.password_field :password, class: 'form-control form-control' %></p>

        <p><%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation, class: 'form-control form-control' %></p>
        
        <p><%= f.submit "Register", class: "btn btn-outline-success btn-block w-100 mt-2"%></p>

        <% end %>
</div>